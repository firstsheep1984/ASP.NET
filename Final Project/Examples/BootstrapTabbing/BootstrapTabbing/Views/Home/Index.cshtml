@{
    ViewBag.Title = "Home Page";
}

<!-- Tab Buttons -->
<ul id="tabstrip" class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#_SubmissionTab" role="tab" data-toggle="tab">Personal Information</a></li>
    <li><a href="#_SearchTab" role="tab" data-toggle="tab">Educational Details</a></li>
    <li><a href="#_AdditionalTab" role="tab" data-toggle="tab">Enclosed Documents</a></li>
</ul>

<!-- Tab Content Containers -->
<div class="tab-content">
    <div class="tab-pane fade in active" id="_SubmissionTab">@Html.Partial("_SubmissionTab")</div>
    <div class="tab-pane fade" id="_SearchTab"></div>
    <div class="tab-pane fade" id="_AdditionalTab"></div>
</div>

@section scripts {
<script>
    $('#tabstrip a').click(function (e) {
        e.preventDefault()
        var tabID = $(this).attr("href").substr(1);
        $(".tab-pane").each(function () {
            console.log("clearing " + $(this).attr("id") + " tab");
            $(this).empty();
        });
    $.ajax({
        url: "/@ViewContext.RouteData.Values["controller"]/" + tabID+"?id=@ViewContext.RouteData.Values["id"]",
        cache: false,
        type: "get",
        dataType: "html",
        success: function (result) {
            $("#" + tabID).html(result);
        }

    })
   $(this).tab('show')
});
</script>
}