@using PagedList
@model IPagedList<HomeInventory.Models.HomeItem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-3">
        @using (Html.BeginForm("Index", "HomeItems",FormMethod.Get))
        {
            <div class="input-group add-on">
                <input class="form-control" placeholder="Description" name="searchString" value="@ViewBag.CurrentFilter" type="text">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        }
    </div>
</div>
<br />
<div id="results">
    @Html.Partial("_SearchResults", Model)
</div>
